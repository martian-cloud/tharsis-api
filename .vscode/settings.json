// Place your settings in this file to overwrite the default settings
{
    "cSpell.userWords": [
        "Tharsis",
        "tharsis"
    ],
    "cSpell.enabledFileTypes": {
        "terraform": true,
        "go.mod": false,
        "go.sum": false
    },
    "editor.formatOnSave": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "go.lintOnSave": "package",
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "-E",
        "revive,gosec"
    ],
    "go.toolsManagement.autoUpdate": true,
    "go.useLanguageServer": true,
    "go.buildTags": "integration",
    "go.buildFlags": [
        "-tags=integration -ldflags='-X gitlab.com/infor-cloud/martian-cloud/tharsis/tharsis-api/internal/db.TestDBHost=localhost -X gitlab.com/infor-cloud/martian-cloud/tharsis/tharsis-api/internal/db.TestDBPort=5432 -X gitlab.com/infor-cloud/martian-cloud/tharsis/tharsis-api/internal/db.TestDBName=tharsis-test -X gitlab.com/infor-cloud/martian-cloud/tharsis/tharsis-api/internal/db.TestDBMode=disable -X gitlab.com/infor-cloud/martian-cloud/tharsis/tharsis-api/internal/db.TestDBUser=postgres -X gitlab.com/infor-cloud/martian-cloud/tharsis/tharsis-api/internal/db.TestDBPass=postgres'"
    ],
    "go.coverOnSave": false,
    "go.coverageDecorator": {
        "type": "highlight",
        "coveredHighlightColor": "rgba(64,128,128,0.4)",
        "uncoveredHighlightColor": "rgba(128,64,64,0.4)",
        "coveredGutterStyle": "blockgreen",
        "uncoveredGutterStyle": "blockred"
    },
    "go.coverOnSingleTest": true,
    "go.coverageOptions": "showBothCoveredAndUncoveredCode",
    "go.coverOnTestPackage": true,
    "gopls": {
        "ui.completion.usePlaceholders": true, // add parameter placeholders when completing a function
        "ui.diagnostic.staticcheck": true,
        "ui.codelenses": {
            "gc_details": true,
            "test": true
        },
        "ui.diagnostic.analyses": {
            "nilness": true,
            "shadow": true,
            "unusedparams": true,
            "unusedwrite": true,
            "unusedvariable": true,
        }
    },
    "[go]": {
        "editor.insertSpaces": false,
        "files.insertFinalNewline": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        }
    },
    "[typescript]": {
        "editor.insertSpaces": true
    },
    "[typescriptreact]": {
        "editor.insertSpaces": true
    },
    "files.associations": {
        "*.tmpl": "html"
    }
}
